<div class="form-wrapper">
  <.form
    let={f}
    for={@changeset}
    id={@form_id}
    phx_target={@myself}
    phx_change="validate"
    phx_submit="submit"
  >
    <div class="row">
      <div class="col-md-8 form-group required">
        <%= label f,
          :description,
          class: "form-control-label"
        %>
        <%= text_input f,
          :description,
          class: "form-control"
        %>
      </div>
      <div class="col-md-4 form-group required">
        <%= label f,
          :date,
          class: "form-control-label"
        %>
        <%= date_input f,
          :date,
          class: "form-control"
        %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 form-group required">
        <%= label f,
          :cost,
          class: "form-control-label"
        %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="material-icons">attach_money</i>
            </span>
          </div>
          <%= text_input f, :cost, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4 form-group required">
        <%= label f,
          :purchase_fees,
          "Purchase Fees",
          class: "form-control-label"
        %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="material-icons">attach_money</i>
            </span>
          </div>
          <%= text_input f, :purchase_fees, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4 form-group required">
        <%= label f,
          :quantity,
          class: "form-control-label"
        %>
        <%= number_input f,
          :quantity,
          class: "form-control"
        %>
      </div>
    </div>
  </.form>
</div>