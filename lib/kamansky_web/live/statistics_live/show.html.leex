<h1><%= @page_title %></h1>
<section>
  <h3>Income</h3>
  <div class="accordion">
    <div class="accordion-item">
      <div class="accordion-header">
        <button
          class="accordion-button"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="gross-profit"
        >
          Gross Profit: <span class="text-success"><%= format_decimal_as_currency(@statistics.gross_profit) %></span>
        </button>
      </div>
    </div>
  </div>
</section>
